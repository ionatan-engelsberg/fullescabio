        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <script>
            //todo: calculo de cantidad a favor
            //todo: pulir styles partida
            //todo: input seleccion cantidad partidas modal no debe poder ingresarse valores mayores a cantidad a favor
            //todo: cerrar modal una vez seleccionadas partidas


            sessionStorage.setItem("session-data", JSON.stringify(null))
            let retrievedData = JSON.parse(sessionStorage.getItem('session-data'));
            let usedIDs = new Set();

            function randomID() {
                let id;
                do {
                    id = Math.floor(Math.random() * 100) + 2; 
                } while (usedIDs.has(id));
                    usedIDs.add(id);
                return id;
            }
            
            document.getElementById('optionSelect').addEventListener('change', function() {
                document.getElementById('idContainer').style.display = 'none';
                document.getElementById('razonContainer').style.display = 'none';
                document.getElementById('nombreFantasiaContainer').style.display = 'none';
    
                const selectedValue = this.value;
                if (selectedValue === '1') {
                    document.getElementById('idContainer').style.display = 'block';
                } else if (selectedValue === '2') {
                    document.getElementById('razonContainer').style.display = 'block';
                } else if (selectedValue === '3') {
                    document.getElementById('nombreFantasiaContainer').style.display = 'block';
                }
            });

            document.getElementById('optionSelect').dispatchEvent(new Event('change'));

            function agregarEventoEliminar(fila, partidaID) {
                const botonEliminar = fila.querySelector('.eliminarFila');
                botonEliminar.addEventListener('click', function() {
                    fila.remove();
                    eliminarPartidaDeSession(partidaID)
                });
            }

            function eliminarPartidaDeSession(partidaID) {
                if (retrievedData.partidas) {
                    const partidaIndex = retrievedData.partidas.findIndex(partida => partida.id === partidaID);

                    if (partidaIndex !== -1) {
                        retrievedData.partidas.splice(partidaIndex, 1);
                    }
                }
            }

            document.addEventListener('DOMContentLoaded', () => {
                let showModal = document.getElementById('showModal').value;
                let modal = new bootstrap.Modal(document.getElementById('seleccionarClienteModalPedidoUnico'));
                if (showModal === 'true') {
                    modal.show();
                }
                const resultItems = document.querySelectorAll('.result-item');
                const confirmButton = document.getElementById('confirmarSeleccion');
                let selectedItemId = null;
                resultItems.forEach(item => {
                    item.addEventListener('click', () => {
                        resultItems.forEach(i => i.classList.remove('selected'));
                        item.classList.add('selected');
                        selectedItemId = item.getAttribute('data-id');
                        confirmButton.disabled = false;
                    });
                });

                confirmButton.addEventListener('click', () => {
                    if (selectedItemId) {
                        confirmButton.disabled = true;            
                        modal.hide()      
                    }
                });
            });
            
            document.addEventListener('DOMContentLoaded', () => {
                const confirmarClienteButton = document.getElementById('confirmarCliente');
                const inputListaPedidoUnico = document.querySelector('#listaPedidoUnico');
                const listaPorDefecto = document.querySelector('#listaPorDefecto');
                const vendedorPorDefecto = document.querySelector('#vendedorPorDefecto');
                const inputVendedorPedidoUnico = document.querySelector('#vendedorPedidoUnico');
                const inputTipoPedidoUnico = document.querySelector('#tipoPedidoUnico');
                const inputFechaPedidoUnico = document.querySelector('#fechaPedidoUnico');
                const inputCodigoPedidoUnico = document.getElementById("codigoPedidoUnico")
                const nombreArticuloPedidoUnico = document.getElementById("nombreArticuloPedidoUnico")
                const resultItems = document.querySelectorAll('.result-item');
                const partidas = document.querySelectorAll('.partida');
                let selectedResult = null;
                let partidasSeleccionadas = [];

                resultItems.forEach(item => {
                    item.addEventListener('click', () => {
                        resultItems.forEach(el => el.classList.remove('selected'));
                        item.classList.add('selected');
                        document.getElementById('confirmarSeleccion').disabled = false;
                        selectedResult = {                          
                            id: item.getAttribute('data-id'),
                            razon: item.getAttribute('data-razon'),
                            nombreFantasia: item.getAttribute('data-nombreFantasia'),
                            lista: item.getAttribute('data-lista'),
                            listaCodigo: item.getAttribute('data-listaCodigo'),
                            vendedor: item.getAttribute('data-vendedor'),
                            fecha: "",
                            tipo: ""
                        };
                        
                        retrievedData = { ...selectedResult }
                    });
                });
                
                document.getElementById('confirmarSeleccion').addEventListener('click', () => {
                    if (selectedResult) {
                        listaPorDefecto.textContent = selectedResult.lista
                        vendedorPorDefecto.textContent = selectedResult.vendedor
                    }
                });

                confirmarClienteButton.addEventListener('click', () => {
                    if (confirmarClienteButton.textContent.trim().startsWith("Confirmar")) {
                        confirmarClienteButton.classList.remove('btn-green-color');
                        confirmarClienteButton.classList.add('btn-base-color');
                        confirmarClienteButton.innerHTML = 'Desconfirmar <i class="bi bi-x-lg text-white"></i>';
                    } else {                        
                        confirmarClienteButton.classList.remove('btn-base-color');
                        confirmarClienteButton.classList.add('btn-green-color');
                        confirmarClienteButton.innerHTML = 'Confirmar <i class="bi bi-check-circle-fill text-white"></i>';
                    }

                    inputListaPedidoUnico.disabled = !inputListaPedidoUnico.disabled;
                    inputListaPedidoUnico.classList.toggle('input-disabled'); 

                    inputVendedorPedidoUnico.disabled = !inputVendedorPedidoUnico.disabled;
                    inputVendedorPedidoUnico.classList.toggle('input-disabled'); 
                    
                    inputTipoPedidoUnico.disabled = !inputTipoPedidoUnico.disabled;
                    inputTipoPedidoUnico.classList.toggle('input-disabled');

                    inputFechaPedidoUnico.disabled = !inputFechaPedidoUnico.disabled;
                    inputFechaPedidoUnico.classList.toggle('input-disabled');
                    
                    retrievedData.lista = inputListaPedidoUnico.value
                    retrievedData.vendedor = inputVendedorPedidoUnico.value
                    retrievedData.tipo = inputTipoPedidoUnico.value
                    retrievedData.fecha = inputFechaPedidoUnico.value

                    let filas = document.querySelectorAll(".filaFormularioArticulo")
                    filas.forEach(fila => {
                        let inputs = fila.querySelectorAll('input');
                        inputs.forEach(input => {
                            input.disabled = !input.disabled; 
                            input.classList.toggle('input-disabled');
                        });
                    });
                    
                    let botonesBuscar = document.querySelectorAll('.buscarCodigoPedidoUnico');
                    let verPartidas = document.querySelectorAll('.verPartidas');
                    let eliminarFila = document.querySelectorAll('.eliminarFila');
                    botonesBuscar.forEach(boton => {
                        boton.disabled = !boton.disabled; 
                    });
                    verPartidas.forEach(boton => {
                        boton.disabled = !boton.disabled; 
                    });
                    eliminarFila.forEach(boton => {
                        boton.disabled = !boton.disabled; 
                    });

                    let filteredInputs = Array.from(document.querySelectorAll('input')).filter(input =>
                        input.classList.contains('codigoPedidoUnico') ||
                        input.classList.contains('nombreArticuloPedidoUnico') ||
                        input.classList.contains('cantidadPedidoUnico') ||
                        input.classList.contains('costoPedidoUnico') ||
                        input.classList.contains('precioPedidoUnico')
                    ); 

                    let inputValues = filteredInputs.map(input => input.value);

                    function groupElements(elements) {
                        const grouped = [];
    
                        for (let i = 0; i < elements.length; i += 5) {
                            grouped.push(elements.slice(i, i + 5));
                        }
    
                        return grouped;
                    }
                    
                    const resultInputValues = groupElements(inputValues)

                    for (let i = 0; i < retrievedData.partidas.length; i++) {
                        retrievedData.partidas[i].articulos = resultInputValues[i]
                    }

                    console.log(retrievedData)
                });
            });

            document.addEventListener('DOMContentLoaded', () => {
                const modal = document.getElementById('verPartidasPedidoUnico');
                const nombreArticuloPedidoUnico = document.getElementById("nombreArticuloPedidoUnico")

                document.getElementById("cantidadPedidoUnico").addEventListener("input", () => {
                    document.querySelector("#cantidadModal").textContent = document.getElementById("cantidadPedidoUnico").value;
                    let btnVerPartidas = document.querySelector(".verPartidas")
                    btnVerPartidas.disabled = false
                })

                document.getElementById('agregarFila').addEventListener('click', function() {
                    const formularioArticulos = document.getElementById('formularioArticulos');
                    const filaOriginal = document.querySelector('#filaFormularioArticulo');
                    const nuevaFila = filaOriginal.cloneNode(true);
                    const uniqueID = randomID(); 

                    nuevaFila.classList.add(`filaFormularioArticulo`)
                    nuevaFila.classList.add(`filaFormularioArticulo-${uniqueID}`)

                    nuevaFila.querySelectorAll('input').forEach(input => input.value = '');

                    let btnPartidas = nuevaFila.querySelector(".verPartidas")
                    btnPartidas.disabled = true
                    
                    nuevaFila.querySelectorAll('.verPartidas').forEach(button => {
                        button.id = uniqueID
                        button.setAttribute('data-target', `#verPartidasPedidoUnico-${uniqueID}`);
                    });

                    nuevaFila.querySelectorAll('.modalVerPartidas').forEach(modal => {
                        modal.id = `verPartidasPedidoUnico-${uniqueID}`;
                        modal.setAttribute('data-uniqueid', uniqueID);
                    });

                    let filteredInputs = Array.from(nuevaFila.querySelectorAll('input')).filter(input =>
                        input.classList.contains('cantidadPedidoUnico') 
                    );      
                                        
                    let cantidadModal = nuevaFila.querySelector("#cantidadModal")
                    filteredInputs.forEach(input => {
                        input.addEventListener("input", () => {
                            cantidadModal.textContent = input.value;
                        })
                    })

                    formularioArticulos.appendChild(nuevaFila);
                    agregarEventoEliminar(nuevaFila, uniqueID);
                });

                document.addEventListener('click', function(event) {
                    if (event.target && event.target.id === 'buscarCodigoPedidoUnico') {
                    const fila = event.target.closest('.row');
                    const uniqueID = fila.querySelector(".modalVerPartidas").getAttribute('data-uniqueid');

                    let inputCodigoPedidoUnico = fila.querySelector('input[name="codigoPedidoUnico"]');
                    let codigo = inputCodigoPedidoUnico.value;

                    const data = { 
                        codigoPedidoUnico: codigo,
                        listaCodigo: retrievedData.listaCodigo
                    };

                    fetch(`/admin/pedido-unico/obtener-articulos`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    })
                    .then(response => response.json())
                    .then(result => {
                        let partidasContainer = uniqueID != null 
                        ? fila.querySelector(`#verPartidasPedidoUnico-${uniqueID} #partidasResultadosPedidoUnico`) 
                        : fila.querySelector('#verPartidasPedidoUnico #partidasResultadosPedidoUnico');
                        
                        partidasContainer.innerHTML = '';

                        let nombreArticuloPedidoUnico = fila.querySelector('input[name="nombreArticuloPedidoUnico"]');
                        nombreArticuloPedidoUnico.value = result.resultadosCodigo[0].nombre;

                        let precioArticuloPedidoUnico = fila.querySelector('input[name="precioPedidoUnico"]')
                        precioArticuloPedidoUnico.value = result.resultadosCodigo[0].precio;

                        let cantidadAFavor = fila.querySelector("#cantidadAFavorModal")
                        let cantidadModal
                        let cantidadModalElement = fila.querySelector("#cantidadModal")

                        let verPartidas = fila.querySelector(".col-md-2 .verPartidas")
                        verPartidas.addEventListener("click", () => {
                            cantidadModal = cantidadModalElement.textContent
                        })

                        let inputCantidadPedidoUnico = fila.querySelector("#cantidadPedidoUnico")
                        inputCantidadPedidoUnico.addEventListener("input", () => {
                            verPartidas.disabled = false
                        })

                        //todo: btn debe figurar en todo momento en el scroll
                        const rowConfirmarBtn = document.createElement('div');
                        rowConfirmarBtn.className = "row"

                        const colConfirmarBtn = document.createElement('div');
                        colConfirmarBtn.className = "col-md-12 text-center"

                        const confirmarBtn = document.createElement('button');
                        confirmarBtn.type = 'button';
                        confirmarBtn.className = 'btn btn-primary mt-3 confirmarSeleccionPartidas';
                        confirmarBtn.id = `confirmarSeleccionPartidas-${uniqueID}`;
                        confirmarBtn.textContent = 'Confirmar Selección';

                        colConfirmarBtn.appendChild(confirmarBtn)
                        rowConfirmarBtn.appendChild(colConfirmarBtn)
                        
                        const partidaDivs = result.resultadosPartidas.map(item => {
                            const { numero , cantidad, codigoDeposito, costoUnitario, ubicacion } = item
                            const container = document.createElement("div")
                            const partidaDiv = document.createElement('div');
                            partidaDiv.className = 'partida row pt-15px pb-15px';

                            const input = document.createElement('input');
                            input.type = 'number'
                            input.className = 'form-control';
                            input.setAttribute('min', '0');

                            if (cantidad <= 0) {
                                input.disabled = true;
                            } else {
                                input.addEventListener('input', function() {
                                    if (parseInt(input.value, 10) > cantidad) {
                                        input.value = cantidad;
                                    }
                                });
                            }                       

                            const contents = [
                                numero || 'No Definido',
                                cantidad || 'No Definido',
                                codigoDeposito || 'No Definido',
                                costoUnitario || 'No Definido',
                                ubicacion || 'No Definido',
                            ];

                            for (let i = 0; i < 5; i++) {
                                const colDiv = document.createElement('div');
                                colDiv.className = 'col-md-2 h-100';
                                colDiv.textContent = contents[i];

                                partidaDiv.appendChild(colDiv);
                            }

                            const colInput = document.createElement('div');
                            colInput.className = 'col-md-2';
                            colInput.appendChild(input)
                            partidaDiv.appendChild(colInput)

                            return partidaDiv;
                        });

                        partidaDivs.forEach(partidaDiv => partidasContainer.appendChild(partidaDiv));          

                        if (!partidasContainer.querySelector('.confirmarSeleccionPartidas')) {
                            partidasContainer.appendChild(rowConfirmarBtn);
                        }          

                        verPartidas.addEventListener("click", () => {
                            let partidaRow 
                            let cantidadInput = fila.querySelector("#cantidadPedidoUnico").value
                            let cantidadActual = cantidadModalElement.textContent
                            let botonesCantidad = partidasContainer.querySelectorAll("input");
                            
                            let totalSuma = 0;
                            botonesCantidad.forEach(function(input) {
                                let valorInput = Number(input.value) || 0; 
                                totalSuma += valorInput;
                            });
                            
                            cantidadInput = cantidadInput - totalSuma
                            cantidadModalElement.textContent = cantidadInput
                            cantidadActual = cantidadInput

                            botonesCantidad.forEach(function(input) {
                                let valorPrevio = parseInt(input.value, 10) || 0;
                                input.addEventListener("input", function(event) {
                                    let valorActual = parseInt(input.value, 10) || 0;
                                    let diferencia = valorActual - valorPrevio;

                                    cantidadActual -= diferencia;
                                    valorPrevio = valorActual;

                                    if (cantidadActual < 0) {
                                        cantidadModalElement.style = "color: red !important; font-weight: 800"
                                    } else {
                                        cantidadModalElement.style = "color: green !important; font-weight: 800"
                                    }

                                    cantidadModalElement.textContent = cantidadActual;
                                    confirmarBtn.disabled = (cantidadActual < 0);
                                });
                            });

                            botonesCantidad.forEach(function(input) {
                                input.addEventListener("input", function(event) {
                                    let total = 0;
                                    botonesCantidad.forEach(function(input) {
                                        let valor = parseInt(input.value, 10) || 0;
                                        total += valor;
                                    });

                                    cantidadAFavor.textContent = total
                                });
                            });
                        });

                        partidasContainer.addEventListener('click', handlePartidaClick);       
                        
                        confirmarBtn.addEventListener("click", function(){
                            let modalContainer = uniqueID === null ? document.getElementById(`verPartidasPedidoUnico`) : document.getElementById(`verPartidasPedidoUnico-${uniqueID}`)
                            let modal = new bootstrap.Modal(modalContainer);
                            //todo: solucionar bug
                            setTimeout(() => {
                             modal.hide();
                            }, 100);
                            
                            confirmarSeleccionPartidas(uniqueID === null ? 1 : uniqueID, null, partidasContainer)
                        })                 
                        return result;
                    })
                    .catch(error => {
                        console.log(error);
                        let nombreArticuloPedidoUnico = fila.querySelector('input[name="nombreArticuloPedidoUnico"]');
                        nombreArticuloPedidoUnico.value = "No hay resultados";
                        return error;
                    });
                }});
            });

            function confirmarSeleccionPartidas(modalID, object, elements) {
                //todo: retrievedData --> partidas debe tener los datos del elemento
                const arr = Array.from(elements.querySelectorAll('.partida'));
                const selectedPartidas = arr.filter(arr => arr.classList.contains('selected'));
                let conjuntoPartidas = []
                for(let i = 0; i < selectedPartidas.length; i++){
                    let array = Array.from(selectedPartidas[i].querySelectorAll(".col-md-2")).slice(0, 5);
                    let dataPartidas = {
                        numero: Number(array[0].textContent),
                        stock: Number(array[1].textContent),
                        deposito: array[2].textContent,
                        costoUnitario: Number(array[3].textContent),
                        ubicacion: array[4].textContent, 
                        cantidad: Number(selectedPartidas[i].querySelector("input").value)
                    }
                    conjuntoPartidas.push(dataPartidas)
                }

                if (!retrievedData.partidas) {
                    retrievedData.partidas = [];
                }
                
                const existingIndex = retrievedData.partidas.findIndex(partida => Number(partida.id) === Number(modalID));
                if (existingIndex !== -1) {
                    retrievedData.partidas[existingIndex].data = conjuntoPartidas;
                } else {
                    retrievedData.partidas.push({ id: Number(modalID), data: conjuntoPartidas, articulos: ""});
                }
            }

            function handlePartidaClick(event) {
                if (event.target.classList.contains('partida')) {
                    event.target.classList.toggle('selected');
                }
            }
            
        </script>

