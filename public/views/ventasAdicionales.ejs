        <section>
            <div class="container adminContainer" style="max-width: 100% !important">
                <div class="row mb-3">
                    <div class="col-12">
                      <div class="" data-toggle="buttons">
                        
                        <label class="btn btn-primary">
                          <input type="radio" name="options" id="option1" autocomplete="off" checked> SP (dinamico)
                        </label>
                        <label class="btn btn-primary">
                          <input type="radio" name="options" id="option2" autocomplete="off"> Importador (directo)
                        </label>
                      </div>
                    </div>
                  </div>
                  <div id="spDinamicoSection">
                    <form id="spDinamicoForm">
                      <div class="row">
                        <div class="col-md-12 mb-2">
                          <label for="" class="text-white fw-600 fs-20">Subir Excel. <a href="">Ver Plantila</a></label>
                          <form action="/admin/productos/upload" method="POST" enctype="multipart/form-data">                        
                            <div class="input-group">
                                <input type="file" class="form-control bg-transparent border-color-transparent-white-light file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="file">
                                <button class="btn btn-base-color btn-hover-animation btn-round-edge btn-box-shadow" type="submit" id="inputGroupFileAddon04">Subir</button>
                            </div>
                        </form>
                      </div>
                      </div>
                      <div class="form-group row">
                        <div class="col-md-12">
                            <label for="" class="text-white fw-600 fs-20">Razon</label>
                            <input type="text" class="bg-transparent border-color-transparent-white-light" name="razonPedidoUnico">
                        </div>
                      </div>
                      <div class="row mt-30px">
                        <div class="col-md-6">
                            <label for="" class="text-white fw-600 fs-20">Desde</label>
                            <input type="date" class="form-control bg-transparent border-color-transparent-white-light" name="nombrePedidoUnico">
                        </div>
                        <div class="col-md-6">
                            <label for="" class="text-white fw-600 fs-20">Hasta</label>
                            <input type="date" class="form-control bg-transparent border-color-transparent-white-light" name="nombrePedidoUnico">
                        </div>
                    </div>
                    </form>
                  </div>
                  <div id="importadorDirectoSection" class="hidden">
                    <h3>Importador (directo)</h3>
                    <div class="row">
                      <div class="col-md-12 mb-2">
                        <label for="" class="text-white fw-600 fs-20">Subir Excel. <a href="">Ver Plantila</a></label>
                        <form action="/admin/productos/upload" method="POST" enctype="multipart/form-data">                        
                          <div class="input-group">
                              <input type="file" class="form-control bg-transparent border-color-transparent-white-light file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="file">
                              <button class="btn btn-base-color btn-hover-animation btn-round-edge btn-box-shadow" type="submit" id="inputGroupFileAddon04">Subir</button>
                          </div>
                      </form>
                    </div>
                    </div>
