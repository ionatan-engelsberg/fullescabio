<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    const spDinamicoSection = document.getElementById("spDinamicoSection");
    const importadorDirectoSection = document.getElementById(
      "importadorDirectoSection"
    );

    const botonesSpDinamico = document.getElementById("botonesSpDinamico");
    const botonesImportadorDirecto = document.getElementById(
      "botonesImportadorDirecto"
    );

    const SPDinamicoElegirMetodo = document.getElementById(
      "SPDinamicoElegirMetodo"
    );

    const option1 = document.getElementById("option1");
    const option2 = document.getElementById("option2");

    function toggleSections() {
      if (option1.checked) {
        spDinamicoSection.style.display = "block";
        importadorDirectoSection.style.display = "none";
        botonesSpDinamico.style.display = "block";
        botonesImportadorDirecto.style.display = "none";
        SPDinamicoElegirMetodo.style.display = "block";
      } else if (option2.checked) {
        spDinamicoSection.style.display = "none";
        importadorDirectoSection.style.display = "block";
        botonesSpDinamico.style.display = "none";
        botonesImportadorDirecto.style.display = "block";
        SPDinamicoElegirMetodo.style.display = "none";
      }
    }

    option1.addEventListener("change", toggleSections);
    option2.addEventListener("change", toggleSections);

    toggleSections();
  });

  document.addEventListener("DOMContentLoaded", (event) => {
    document
      .getElementById("agregar-fila")
      .addEventListener("click", function () {
        const tablaBody = document.getElementById("tabla-body");

        const nuevaFila = document.createElement("tr");

        nuevaFila.innerHTML = `
          <td><input type="text" class="form-control" placeholder="SKU"></td>
          <td><input type="text" class="form-control" placeholder="Descripción"></td>
          <td><input type="number" class="form-control" placeholder="Cantidad"></td>
          <td><input type="number" class="form-control" placeholder="Precio"></td>
          <td><input type="text" class="form-control" placeholder="Cliente"></td>
          <td><input type="text" class="form-control" placeholder="S/C"></td>
          <td><input type="number" class="form-control" placeholder="Descuento"></td>
      `;

        tablaBody.appendChild(nuevaFila);
      });

    document
      .getElementById("eliminar-fila")
      .addEventListener("click", function () {
        const tablaBody = document.getElementById("tabla-body");
        const filas = tablaBody.querySelectorAll("tr");
        if (filas.length > 1) {
          tablaBody.removeChild(filas[filas.length - 1]);
        }
      });
  });
</script>

